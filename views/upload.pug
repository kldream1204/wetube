extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method='post', enctype='multipart/form-data')
            label(for='file') video File
            input(type="file", name='uploadVideo', id='file', required=true, accept='video/*')
            input(type="text", name='title', placeholder='Title', required=true)
            textarea(name='description', placeholder='Deacription', required=true)
            input(type="submit", value='Up Load')